<div class="page-header">
  <h1>
    Friend requests
    <a href="/friend_requests/new" class="btn btn-lg btn-success">New Friend request</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Actions</th>
      </tr>

      <% @friend_requests.each do |friend_request| %>
      <tr>
        <td>
          <% if friend_request.sender.present? %>
            <a href="/users/<%= friend_request.sender.id %>">
              <%= friend_request.sender.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if friend_request.recipient.present? %>
            <a href="/users/<%= friend_request.recipient.id %>">
              <%= friend_request.recipient.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/friend_requests/<%= friend_request.id %>" class="btn btn-primary">Show</a>
          <a href="/friend_requests/<%= friend_request.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_friend_request/<%= friend_request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @friend_requests, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
